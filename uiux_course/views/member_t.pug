                    .modal-content
                      .modal-header
                        h1#exampleModalLabel.modal-title.fs-5 新增單元
                        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                      .modal-body
                        .mb-3
                          label.form-label(for='l-name') 教學單元
                          input#l-name.form-control(type='text')
                        .mb-3
                          div.form-label
                            span.me-3 教材上傳(Optional)
